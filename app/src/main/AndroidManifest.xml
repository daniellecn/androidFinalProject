<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.finalproject">

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activities.DessertActivity"
            android:label="@string/title_activity_dish"
            android:parentActivityName=".Activities.DessertListActivity" />
        <activity
            android:name=".Activities.DessertListActivity"
            android:label="@string/title_activity_list_dish">
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"></meta-data>
        </activity>
        <activity
            android:name=".Activities.AddDessertActivity"
            android:label="@string/title_activity_add_dessert"></activity>
    </application>

</manifest>